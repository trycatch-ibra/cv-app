<persistence
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence       http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">
	<persistence-unit name="cvapp" transaction-type="RESOURCE_LOCAL"><!-- Fournisseur 
			de persistence -->
		<provider>org.hibernate.ejb.HibernatePersistence</provider><!-- Classes 
			de persistence -->
		<class>model.Person</class>
		<class>model.ActivityPk</class>
		<class>model.Activity</class>
		<properties><!-- parametres de connection JDBC -->
			<property name="javax.persistence.jdbc.Driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/cvappdb" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="" /><!-- 
				validation du mapping -->
			<property name="javax.persistence.schema-generation.database.action"
				value="drop-and-create" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialectt" />
		</properties>
	</persistence-unit>
</persistence>